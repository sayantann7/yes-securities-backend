generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  fullname  String
  password  String
  role      String   @default("user")
  updatedAt DateTime @default(now())
  createdAt DateTime @default(now())
}